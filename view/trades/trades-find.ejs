<%- include('../header.ejs') %>
<%- include('../navigation.ejs') %>
<main>
    <div class="container">

        <div class="page-header">

            <h1><span class="header-subtext">Trading Post</span><%= helpers.capitalizeWords(header) %></h1>
            <%- include('./trades-subnav.ejs') %>

            <% if (true) { %>
                <br>
                <div class="search-item-trade-builder"></div>
                <% if (search_list.length === 0 && search !== "") { %>
                    <h3>No results found for search.</h3>
                <% } %>
            <% } %>
        </div>

        <% if (search_list.length && search !== "") { %>
            <div class="grid grid-2">

                <% for(var i = 0; i < Math.min(search_list.length); i++) { %>
                    <div class="item">
                        <div class="title">
                            <span><%= search_list[i].name %></span>
                        </div>
                        <div class="content">


                        </div>
                    </div>

                <% } %>
            </div>
        <% } %>

        <h2>Recent Community Sell Offers</h2>
        <br>

        <div class="grid grid-2">
            <% for(var i = 0; i < trades.length; i++) { %>
                <%- include('./trade-item-short.ejs',{trade:trades[i]}) %>
            <% } %>
        </div>

        <% if (!user) { %>
            <div style="padding-top:30px;">
                <%- include('../membership-perks.ejs') %>
            </div>
        <% } %>

    </div>

</main>
<%- include('../site-footer.ejs') %>
<%- include('../footer.ejs') %>