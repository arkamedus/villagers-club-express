            <div class="flex-row nowrap page-search">
                <input id='search-input-box' class="grow" type="text" placeholder="Enter Search..."
                       value="<%- (search || "") %>" aria-label="Search">
                <button id="search-input-button"><i class="fas fa-search fa-fw"></i> Search</button>
            </div>

            <div class="grid grid-3 leading-links">
                <a href="/villagers" class="btn alt">
                    <img class="icon-image" alt="" aria-hidden="true" src="/icons/villagers.png">Villagers</a>
                <a href="/clothing" class="btn alt">
                    <img class="icon-image" alt="" aria-hidden="true" src="/icons/tops.png">Clothing</a>
                <a href="/furniture" class="btn alt">
                    <img class="icon-image" alt="" aria-hidden="true" src="/icons/furniture.png">Furniture</a>
